<form action="/products/edit/{{product._id}}" method="POST" enctype="multipart/form-data">
  <label for="description"> Description </label>
  <input type="text" id="description" name="description" value="{{product.description}}"> <br><br>

  <label for="price"> Price </label>
  <input type="number" id="price" name="price" value="{{product.price}}"> <br><br>

  <label for="category"> Category </label>
  <input type="text" id="category" name="category" value="{{product.category}}"> <br><br>

  <label for="inStock"> Stock </label>
  <input type="checkbox" id="inStock" name="inStock" {{#if product.inStock}}checked{{/if}}> <br><br>

  <label for="isPromotion"> Promotion </label>
  <input type="checkbox" id="isPromotion" name="isPromotion" {{#if product.isPromotion}}checked{{/if}}> <br><br>

  <label for="isNewArrival"> New Arrival </label>
  <input type="checkbox" id="isNewArrival" name="isNewArrival" {{#if product.isNewArrival}}checked{{/if}}> <br><br>

  <label for="imagen"> Image <input type="file" id="image" name="image" accept=".jpg, .jpeg, .png"></label> 

  <button type="submit">Update Product</button>
</form>